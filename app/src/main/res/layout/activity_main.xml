<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:id="@+id/header"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#C0FFC0"
      android:orientation="horizontal"
      android:divider="?android:dividerHorizontal"
      android:showDividers="middle"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/header_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="メニュー" />

    <TextView
        android:id="@+id/header_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="確認事項" />

    <TextView
        android:id="@+id/header_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="結果" />

    <TextView
        android:id="@+id/header_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="13"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="入力者" />

    <TextView
        android:id="@+id/header_notices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="特記事項" />

  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:scrollbars="vertical"
      android:clipToPadding="false"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintTop_toBottomOf="@id/header"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/weight_area"
      app:layout_constraintVertical_bias="0"
      />

  <GridLayout
      android:id="@+id/weight_area"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:columnCount="2"
      android:background="#C0C0F0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/menu_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メニュー："
        android:layout_gravity="right"
        android:layout_column="0"
        android:layout_row="0" />
    <EditText
        android:id="@+id/menu_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:ems="5"
        android:digits="01234567890"
        android:inputType="number"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:id="@+id/check_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認事項："
        android:layout_gravity="right"
        android:layout_column="0"
        android:layout_row="1" />
    <EditText
        android:id="@+id/check_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:ems="5"
        android:digits="01234567890"
        android:inputType="number"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="1"  />

    <TextView
        android:id="@+id/result_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="結果："
        android:layout_gravity="right"
        android:layout_column="0"
        android:layout_row="2" />
    <EditText
        android:id="@+id/result_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:ems="5"
        android:digits="01234567890"
        android:inputType="number"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="2" />

    <TextView
        android:id="@+id/input_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入力者："
        android:layout_gravity="right"
        android:layout_column="0"
        android:layout_row="3" />
    <EditText
        android:id="@+id/input_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:ems="5"
        android:digits="01234567890"
        android:inputType="number"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="3" />

    <TextView
        android:id="@+id/notices_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特記事項："
        android:layout_gravity="right"
        android:layout_column="0"
        android:layout_row="4" />
    <EditText
        android:id="@+id/notices_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:ems="5"
        android:digits="01234567890"
        android:inputType="number"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="4" />

  </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>